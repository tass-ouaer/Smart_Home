<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.gui.controllers.DashboardPageController"
      spacing="15"
      style="-fx-background-color:#0f172a; -fx-padding:20">

    <!-- TOP ACTION BAR -->
    <HBox spacing="10">
        <Button fx:id="addRoomBtn" text="+ Add Room"/>
        <Button fx:id="removeRoomBtn" text="Remove Room"/>
        <Button fx:id="listAllDevicesBtn" text="List All Devices"/>
        <Button fx:id="findDeviceBtn" text="Find Device by ID"/>
    </HBox>

    <!-- STATS -->
    <HBox spacing="20">
        <Label text="Rooms:"/>
        <Label fx:id="roomCountLabel"/>

        <Label text="Devices:"/>
        <Label fx:id="deviceCountLabel"/>

        <Label fx:id="deviceStatusLabel"/>
        <Label fx:id="energyUsageLabel"/>
        <Label fx:id="securityStatusLabel"/>
    </HBox>

    <!-- QUICK ACTIONS -->
    <HBox spacing="10">
        <Button fx:id="allLightsOnBtn" text="All Lights ON"/>
        <Button fx:id="allLightsOffBtn" text="All Lights OFF"/>
        <Button fx:id="lockAllDoorsBtn" text="Lock All Doors"/>
        <Button fx:id="awayModeBtn" text="Away Mode"/>
    </HBox>

    <!-- ROOMS -->
    <ScrollPane fitToWidth="true">
        <VBox fx:id="roomsContainer" spacing="15"/>
    </ScrollPane>

</VBox>
